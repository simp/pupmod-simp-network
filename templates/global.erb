<% bool_to_yesno = { true => 'yes', false => 'no' } -%>
<% unless @gateway.nil? -%>
GATEWAY=<%= @gateway %>
<% end -%>
<% unless @gatewaydev.nil? -%>
GATEWAYDEV=<%= @gatewaydev %>
<% end -%>
HOSTNAME=<%= @hostname %>
<% unless @ipv6_defaultdev.nil? -%>
IPV6_DEFAULTDEV=<%= @ipv6_defaultdev %>
<% end -%>
<% unless @ipv6_defaultgw.nil? -%>
IPV6_DEFAULTGW=<%= @ipv6_defaultgw %>
<% end -%>
<% unless @networking_ipv6.nil? -%>
NETWORKING_IPV6=<%= bool_to_yesno[@networking_ipv6] %>
<% end -%>
<% unless @network.nil? -%>
NETWORK=<%= @network %>
<% end -%>
<% unless @nisdomain.nil? -%>
NISDOMAIN=<%= @nisdomain %>
<% end -%>
<% if @nozeroconf -%>
NOZEROCONF=yes
<% end -%>
<% unless @peerdns.nil? -%>
PEERDNS=<%= bool_to_yesno[@peerdns] %>
<% end -%>
<% unless @networking.nil? -%>
NETWORKING=<%= bool_to_yesno[@networking] %>
<% end -%>
<% if @vlan -%>
VLAN=yes
<% end -%>
<% unless @networkdelay.nil? -%>
NETWORKDELAY=<%= @networkdelay %>
<% end -%>
<% if @ipv6forwarding -%>
IPV6FORWARDING=yes
<% end -%>
<% unless @ipv6_autoconf.nil? -%>
IPV6_AUTOCONF=<%= bool_to_yesno[@ipv6_autoconf] -%>
<% end -%>
<% unless @ipv6_router.nil? -%>
IPV6_ROUTER=<%= bool_to_yesno[@ipv6_router] -%>
<% end -%>
<% unless @ipv6_autotunnel.nil? -%>
IPV6_AUTOTUNNEL=<%= bool_to_yesno[@ipv6_autotunnel] %>
<% end -%>
<% if @persistent_dhclient -%>
PERSISTENT_DHCLIENT='1'
<% end -%>
